<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.demo.controller.ChatController"
            prefHeight="400.0" prefWidth="600.0">
    <VBox alignment="CENTER" prefHeight="200.0" prefWidth="400.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0">
        <StackPane AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
               AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0">
            <Label fx:id="titleChatBox"/>
            <VBox fx:id="chatVbox" spacing="10.0" alignment="CENTER_LEFT">
                <Label fx:id="messageHistory"/>
                <HBox>
                    <TextField fx:id="messageTextField" promptText="Write a message"/>
                    <Button text="Send" onAction="#handleSendMessage"/>
                </HBox>
            </VBox>


        </StackPane>
    </VBox>
</AnchorPane>
